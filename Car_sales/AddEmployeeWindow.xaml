<Window x:Class="Car_sales.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Car_sales"
        mc:Ignorable="d"
        Title="AddEmployeeWindow" Height="450" Width="500">
    <Grid>
        <Label Content="Добавление нового сотрудника" FontSize="16" FontWeight="Heavy" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top"/>
        <TextBox Name="NameTextBox" HorizontalAlignment="Left" Margin="215,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="217" Height="30"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="46,118,0,0" VerticalAlignment="Top"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="46,153,0,0" VerticalAlignment="Top"/>
        <Label Content="Отчество" HorizontalAlignment="Left" Margin="46,189,0,0" VerticalAlignment="Top"/>
        <Label Content="Электронная почта" HorizontalAlignment="Left" Margin="46,225,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="46,260,0,0" VerticalAlignment="Top"/>
        <TextBox Name="LastnameTextBox"  HorizontalAlignment="Left" Margin="215,151,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="217" Height="30"/>
        <TextBox Name="PatronymicTextBox" HorizontalAlignment="Left" Margin="215,187,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="217" Height="30"/>
        <TextBox Name="EmailTextBox" HorizontalAlignment="Left" Margin="215,223,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="217" Height="30"/>
        <PasswordBox Name="PasswordTextBox" HorizontalAlignment="Left" Margin="215,258,0,0" VerticalAlignment="Top" Width="217" Height="30"/>
        <Button Content="Добавить" HorizontalAlignment="Center" Margin="0,327,0,0" VerticalAlignment="Top" Height="40" Width="198" Click="AddButton_Click"/>

    </Grid>
</Window>
